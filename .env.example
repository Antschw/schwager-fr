# Example environment configuration for Schwager Plant Monitoring
# Copy this file to .env and adjust values for your environment

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Database URL for Prisma
DATABASE_URL="postgresql://user:password@localhost:5432/auth_db?schema=public"

# Application Port
PORT=4000

# JWT Secrets (generate secure random strings for production)
JWT_ACCESS_TOKEN_SECRET="your-access-token-secret-min-32-chars"
JWT_REFRESH_TOKEN_SECRET="your-refresh-token-secret-min-32-chars"

# JWT Expiration
JWT_ACCESS_TOKEN_EXPIRATION="15m"
JWT_REFRESH_TOKEN_EXPIRATION="7d"

# CORS Origin (frontend URL)
CORS_ORIGIN="http://localhost:3000"

# Environment
NODE_ENV="development"

# Admin user credentials
ADMIN_DEFAULT_EMAIL="admin@example.com"
ADMIN_DEFAULT_PASSWORD="your-secure-password"

# =============================================================================
# PRODUCTION OVERRIDES (copy to .env.production)
# =============================================================================

# Production database (configured on VPS)
# DATABASE_URL="postgresql://prod_user:secure_password@localhost:5432/auth_db_prod?sslmode=require"

# Production JWT secrets (64+ characters recommended)
# JWT_ACCESS_TOKEN_SECRET="your-production-access-secret-should-be-very-long-and-secure"
# JWT_REFRESH_TOKEN_SECRET="your-production-refresh-secret-should-be-very-long-and-secure"

# Shorter token expiration for production
# JWT_ACCESS_TOKEN_EXPIRATION="5m"
# JWT_REFRESH_TOKEN_EXPIRATION="1d"

# Production domain
# CORS_ORIGIN="https://schwager.fr,https://schwager.fr/api-docs"

# Production environment
# NODE_ENV="production"

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker registry (for CI/CD)
DOCKER_REGISTRY="ghcr.io"
DOCKER_IMAGE_PREFIX="ghcr.io/your-username/schwager"

# VPS deployment (add to GitHub Secrets)
# VPS_HOST="your-vps-ip-or-domain"
# VPS_USER="your-ssh-username"
# VPS_SSH_KEY="your-private-ssh-key"

# =============================================================================
# IOT & HARDWARE CONFIGURATION
# =============================================================================

# Raspberry Pi camera module
CAMERA_ENABLED=true
CAMERA_RESOLUTION="1920x1080"
CAMERA_FPS=30

# RTSP streaming
RTSP_PORT=8554
RTSP_PATH="/stream"

# Sensor reading intervals (milliseconds)
SENSOR_READ_INTERVAL=5000
SENSOR_HISTORY_RETENTION_DAYS=30

# Device control timeouts
PUMP_MAX_DURATION=60
SPRAYER_MAX_DURATION=30

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log levels: error, warn, info, debug
LOG_LEVEL="info"

# File upload limits
MAX_FILE_SIZE="50MB"
MAX_FILES_PER_UPLOAD=10

# Rate limiting
API_RATE_LIMIT="100"  # requests per minute
LOGIN_RATE_LIMIT="5"  # attempts per minute