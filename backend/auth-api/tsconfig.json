{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "./src/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*",
    "./src/types/express.d.ts"
  ],
  "exclude": ["node_modules",
    "../../auth-api/prisma"
  ]
}